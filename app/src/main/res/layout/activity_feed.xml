<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16161A">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#16161A">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text=" Fakebook"
            android:textColor="#2CB67D"
            android:textSize="34sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/chat_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"

            android:background="@drawable/message_vector"
            android:drawableTint="#F2EDED" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/search_vector"
            android:drawableTint="#F2EDED"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/header">

            <ImageView
                android:id="@+id/profile_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_profile"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/create_post_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:textAlignment="textStart"
                android:paddingHorizontal="10dp"
                android:background="@drawable/transparent_bg"
                android:text="What's on your mind?"
                android:textSize="16sp"
                android:textColor="#616161" />

            <Button
                android:id="@+id/button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/image_vector"
                android:drawableTint="#FFFFFF"
                android:tint="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_body_separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#141414"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/create_post_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bot_nav_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_body_separator" />

    <!-- Hardcoded post inside RecyclerView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="0dp"
        android:backgroundTint="#00121212"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409">

        <LinearLayout
            android:id="@+id/post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/post_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/post_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:backgroundTint="#002C2C2C"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/profile_post_content"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_profile"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif"
                        android:text="Aeri Uchinaga"
                        android:textColor="#EBEBEB"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="35dp"
                        android:text="2h ago"
                        android:textColor="#5D5D5D"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/caption_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:layout_marginBottom="8dp"
                    android:text="Pretty girl 3"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/photo_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/post_photo"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hq720" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/actions_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#00313131"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/like_post_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/heart_vector"
                    android:contentDescription="Like"
                    android:drawableTint="@color/white" />

                <Button
                    android:id="@+id/comment_post_button"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/comment_vector"
                    android:contentDescription="Comment"
                    android:drawableTint="@color/white" />

                <Button
                    android:id="@+id/share_post_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/share_vector"
                    android:contentDescription="Share"
                    android:drawableTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/post_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:backgroundTint="#101010"
        tools:layout_editor_absoluteX="44dp"
        app:layout_constraintTop_toBottomOf="@id/post_container"
        tools:layout_editor_absoluteY="571dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="141dp"
        android:backgroundTint="#002C2C2C"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_container"
        tools:layout_editor_absoluteY="509dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:text="Keurt Bryan Umalin"
            android:textColor="#EBEBEB"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="35dp"
            android:text="Just Now"
            android:textColor="#5D5D5D"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/profile_post_content5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_profile"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="60dp"
            android:text="BASTOS AKONG TAO"
            android:textColor="#FAFAFA"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/actions_container2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:background="#00313131"
            android:orientation="horizontal">

            <Button
                android:id="@+id/like_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/heart_vector"
                android:contentDescription="Like"
                android:drawableTint="@color/white" />

            <Button
                android:id="@+id/comment_button"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/comment_vector"
                android:contentDescription="Comment"
                android:drawableTint="@color/white" />

            <Button
                android:id="@+id/share_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/share_vector"
                android:contentDescription="Share"
                android:drawableTint="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--  Nav and body line separator  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bot_nav_border"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="#101010"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar" />

<!--  Navbar  -->
    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingHorizontal="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home_vector"
            android:drawableTint="#F2EDED"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/friends_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/friends_vector"
            android:drawableTint="#F2EDED"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/following_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/heart_vector"
            android:drawableTint="#F2EDED"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/notification_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/notification_vector"
            android:drawableTint="#F2EDED"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_vector"
            android:drawableTint="#F2EDED"/>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>