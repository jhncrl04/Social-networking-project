<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--   Reusable text styles -->
    <style name="CustomTextInputLayoutStyle">
<!--        <item name="android:background">@drawable/rounded_textfields</item>-->
        <item name="android:textColorHint">#D4D4D4</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--   Reusable text field styles -->
    <style name="CustomTextInputEditTextStyle">
        <item name="android:background">@drawable/rounded_textfields</item>
        <item name="android:textColorHint">#D4D4D4</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--   Reusable text field styles -->
    <style name="lineBorderTextInputEditTextStyle">
        <item name="android:background">@drawable/textfield_underline_border</item>
        <item name="android:textColorHint">#D4D4D4</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>